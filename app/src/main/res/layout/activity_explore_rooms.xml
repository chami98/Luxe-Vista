<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <!-- Title for Available Rooms -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Rooms at Luxe Vista Resort"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium" />

        <!-- List of Available Rooms -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card_background"
            android:padding="5dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp" />

        <!-- Service Reservation Section -->
        <TextView
            android:id="@+id/tvServiceReservationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In-House Services Reservation"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal">

            <!-- Button to Book Spa -->
            <Button
                android:id="@+id/btnBookSpa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_background"
                android:textColor="#FFFFFF"
                android:text="Book Spa"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:textSize="16sp"
                android:elevation="4dp" />

            <!-- Button to Book Fine Dining -->
            <Button
                android:id="@+id/btnBookDining"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_background"
                android:textColor="#FFFFFF"
                android:text="Book Dining"
                android:padding="12dp"
                android:textSize="16sp"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- Reserve Now Button -->
        <Button
            android:id="@+id/btnReserve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reserve Now"
            android:background="@drawable/rounded_button_background"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:elevation="6dp" />
    </LinearLayout>
</ScrollView>
